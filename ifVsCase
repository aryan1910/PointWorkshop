#include <iostream>
using namespace std;

int main() {
  int day = 4;
  switch (day) {
  case 1:
    cout << "Monday";
    break;
  case 2:
    cout << "Tuesday";
    break;
  case 3:
    cout << "Wednesday";
    break;
  case 4:
    cout << "Thursday";
    break;
  case 5:
    cout << "Friday";
    break;
  case 6:
    cout << "Saturday";
   break;
  case 7:
    cout << "Sunday";
    break;
  default:
	cout<<"Not a valid day";
	break;
  }
  return 0;
}


#include <iostream>
using namespace std;

int main() {
  int day = 15;
  if(day==1)
    cout << "Monday";
  else if(day==2)
    cout << "Tuesday";
  else if(day==3)
    cout << "Wednesday";
  else if(day==4)
    cout << "Thursday";
  else if(day==5)
    cout << "Friday";
  else if(day==6)
    cout << "Saturday";
  else if(day==7)
    cout << "Sunday";
  else
	cout<<"Not a valid day";
  return 0;
}
